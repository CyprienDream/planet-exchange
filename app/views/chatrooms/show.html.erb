
<div class="container">
  <div class="close-btn text-right mt-3 mb-2">
    <% link_to user_chatrooms_path(current_user) do %>
      <%= image_tag "close.svg" %>
    <% end %>
  </div>

  <div class="d-flex justify-content-between align-items-center">
    <div class="user-info">
      <h2 class="mb-5"><%= @user.username %></h2>
    </div>

    <%= cl_image_tag @user.photo.key, class: "user-img" %>

  </div>

  <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
     <% @chatroom.messages.each do |message| %>
      <% if message.user.id == current_user.id %>
        <%= render 'messages/message-current-user', message: message %>
      <% else %>
        <%= render 'messages/message-chat-user', message: message %>
      <% end %>
    <% end %>
  </div>

  <div class="chat-input">
    <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
      <%= f.input :content, label: false, placeholder: "Enter here your message" %>
    <% end %>
  </div>
</div>
