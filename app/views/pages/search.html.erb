<div class="container">
  <h2><% if params[:query] %>Here are the results!<% else %>Looking for something ?<% end %></h2>
  <div class="map-container">
    <div id="map"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
  <p class="mt-4"><strong><% if @storage_items != nil %><%= @storage_items.length %></strong> items found.<% end %></p>
  <% if params[:query].present? || params[:search_array].present? %>
    <% @owners.each do |owner| %>
    <button class="js-fly" data-lat="<%= owner.storage.latitude %>" data-lng="<%= owner.storage.longitude %>"><%= image_tag "interest_icons/beer.svg", class: "map-marked" %></button>
      <%= link_to user_path(owner) do %>
    <div class="d-flex item-card-user">
      <%= cl_image_tag owner.photo.key, class: "icon-user" %>
      <%= owner.username %>
    </div>
    <% end %>
    <% end %>
  <% end %>

  <div class="form-container">
      <%= form_tag search_path, method: :get do %>
        <p>Looking for something else ?<p>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Search here" %>
        <%= submit_tag "Search", class: "btn btn-white" %>
      <% end %>
  </div>
</div>
