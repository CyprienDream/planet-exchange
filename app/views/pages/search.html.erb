<h1>Search page</h1>

<div class="map-container">
  <div id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<%= form_tag search_path, method: :get do %>
  <%= text_field_tag :query,
  params[:query],
  class: "form-control",
  placeholder: "Search for item to borrow" %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

<% if params[:query].present?%>
<% @items.each do |item| %>
<%= link_to  %>
  <div class="item-card">
    <%= item.item.name %>
    <%= item.storage.address %>
  </div>
  <% end %>
<% end %>

<% if params[:query].present?%>
<% @items.each do |item| %>
<%= link_to user_path(item.storage.user) do %>
  <div class="item-card">
    <%= item.storage.user.username %>
  </div>
  <% end %>
  <% end %>
<% end %>
