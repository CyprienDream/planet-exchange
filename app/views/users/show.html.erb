<div class="container">

  <div class="close-btn text-right mt-3 mb-2">
    <%= link_to :back do %>
      <%= image_tag "close.svg" %>
    <% end  %>
  </div>

  <div class="d-flex justify-content-between align-items-center">

    <div class="user-info">
      <h2><%= @user.username %></h2>
      <small><%= @city %></small>
    </div>
    <%= cl_image_tag @user.photo.key, class: "user-img" %>
  </div>

  <div class="mt-3">
    <%= @user.bio %>
  </div>

  <div class="user-background-container">
  <div class="p-3">


    <div class="storage-holder">
    <p><%= @user.username %>'s storage room</p>
  <div class="storage-room-items-container">
  <% @storage_items.each do |item| %>
  <div class="item-item">
  <%= item.name %>
  </div>
  <% end %>
  </div>

    </div>

    <div class="interests-holder">
    <p><%= @user.username%>'s interests</p>
    <div class="grid-interests">
      <% @user.interests.each do |interest|  %>
      <%= cl_image_tag interest.photo.key, class: "user-interest-icon" %>
      <% end %>
    </div>
  </div>
    </div>
  </div>
  <div class="text-center mt-3">
    <div class="btn btn-white ">Contact</div>
  </div>

</div>
