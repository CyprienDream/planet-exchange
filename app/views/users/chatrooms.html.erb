<div class="container">
  <h2>Messages</h2>

  <div class="chatrooms-container" dataset=<%= current_user.id%>>
    <% if @chatrooms === "" %>
      <p>You donâ€™t have any messages yet.<br>
      Find someone to borrow to, <%= link_to "here", search_path %></p>
    <% else %>
      <% @chatrooms.each do |chatroom| %>
        <%= link_to chatroom_path(chatroom) do %>
          <div class="chat-preview" style="color: white; border-style: solid">
            <% chatroom.users.each do |user|
              @displayed_name = user.username if user != current_user
            end %>
            <%= @displayed_name %><br>
            <% unless chatroom.messages.empty? %>
              <%= chatroom.messages.last.content %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>

</div>
