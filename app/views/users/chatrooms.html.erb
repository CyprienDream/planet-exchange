<div class="container">
  <h2 class="mb-5">Messages</h2>

  <div id="chatrooms-container" data-user-id=<%= current_user.id%>>
    <% if @chatrooms === "" %>
      <p>You donâ€™t have any messages yet.<br>
      Find someone to borrow from, <%= link_to "here", search_path %></p>
    <% else %>
      <% @chatrooms.each do |chatroom| %>
        <%= render 'chatrooms/chat_preview', chatroom: chatroom %>
        <%= link_to chatroom_path(chatroom) do %>
          <div class="chat-preview">
            <%= cl_image_tag @user.photo.key %>
            <div>
              <% chatroom.users.each do |user|
                @user = user if user != current_user
              end %>

              <small><%= @user.username %></small>
              <% unless chatroom.messages.empty? %>
                <p class="very-small gray">"<%= chatroom.messages.last.content %>"</p>
              <% end %>
            </div>
          </div>
      <% end %>
    <% end %>
  </div>

</div>
