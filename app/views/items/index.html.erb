
  <%= form_tag items_path, method: :get do %>
  <%= text_field_tag :query,
  params[:query],
  class: "form-control",
  placeholder: "Search for item to borrow" %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

  <% @items.each do |item| %>
  <%= item.item.name %>
  <%= item.storage.address %>
  <% end %>

  <% if policy(:item).new?  %>
  <p><%= button_to "Add new item", new_item_path, method: :get %></p>
  <% end %>
